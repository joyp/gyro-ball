doctype html
html
  head
    meta(charset='utf-8')
    meta(name='viewport', content='initial-scale=1, maximum-scale=1, user-scalable=no, width=device-width')
    title
    link(href='css/ionic.app.css', rel='stylesheet')
    link(href='css/style.css', rel='stylesheet')
    script(src='lib/ionic/js/ionic.bundle.js')
    script(src='cordova.js')
    script(src='lib/angular-timer/dist/angular-timer.min.js')
    script(src='js/app.js')
    script(src='js/MainCtrl.js')
  body(data-ng-app='gyroball')
    ion-pane(data-ng-controller='MainCtrl')
      ion-header-bar.bar-stable
        h1.title Gyroball
      ion-content
        .canvas
        .orientation {{orientation}}
      .bar.bar-footer.bar-stable
        button(ng-click='start()') Start Gyro
        button(ng-click='reset()') Reset Gyro
        .timer
          timer(autostart='false', interval='1000') {{minutes}} min, {{seconds}} sec
